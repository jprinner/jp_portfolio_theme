{% extends "base.twig" %}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-md-9 blog-content-wrapper">
			<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">

				{# Blog Post #}
				<section class="article-content">
					<h1 class="post-title">{{post.title}}</h1>
					<p class="blog-author">
						<span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.post_date|date}}
					</p>
					<div class="article-body">
						{{post.content}}
					</div>
				</section>
			</article>
    </div><!-- /content-wrapper -->

		{# SideBar #}
		<aside class="col-md-3" id="primary-sidebar"  class="sidebar" role="complementary">

			{{sidebar}}

		</aside>

	</div><!--end row -->
</div><!--end container -->
{% endblock %}
